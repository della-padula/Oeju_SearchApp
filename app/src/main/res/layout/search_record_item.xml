<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layout_party_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:paddingStart="20dp"
        android:paddingTop="16dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/tv_detail_con_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskr_bold"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:letterSpacing="-0.03"
            android:lines="1"
            android:ellipsize="end"
            android:text="네이버"
            android:textColor="#222222"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_detail_con_title"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_detail_item_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/notosanskr_regular"
                android:includeFontPadding="false"
                android:text="검색 시간 : 2019년 11월 17일 23시 30분"
                android:textColor="#888888"
                android:textSize="12sp" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/layout_party_list_item"
        android:background="#cecece" />

</RelativeLayout>